# -----------------------------------------------------------------------------
# Database container configuration
# -----------------------------------------------------------------------------
# Password for the Oracle SYS, SYSTEM, and PDBADMIN accounts.
ORACLE_PASSWORD=Oracle123
# Application database user created automatically during container startup.
APP_USER=ISO_APP
# Password for the application database user.
APP_USER_PASSWORD=ISO_APP_PASS
# Character set used when initialising the Oracle database.
ORACLE_CHARACTERSET=AL32UTF8

# JDBC connection string used by the server to connect to Oracle.
ORACLE_JDBC_URL=jdbc:oracle:thin:@//oracle:1521/FREEPDB1
# Username used by the server when authenticating with Oracle.
ORACLE_DB_USER=ISO_APP
# Password used by the server when authenticating with Oracle.
ORACLE_DB_PASSWORD=ISO_APP_PASS
# Optional tuning parameters for the HikariCP datasource.
ORACLE_DB_MAX_POOL=10
ORACLE_DB_CONNECTION_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Server configuration
# -----------------------------------------------------------------------------
# TCP port exposed by the ISO 8583 server.
SERVER_PORT=5000
# Optional directory where jPOS will extract its runtime resources.
JPOS_HOME=/opt/rayan-jpos/runtime
# Logging verbosity for the jPOS components.
JPOS_LOG_LEVEL=INFO
# Optional JVM arguments for the server container.
JAVA_OPTS=
# Host:port pair that the server container must wait for before starting.
WAIT_FOR=oracle:1521
# Timeout in seconds used by the startup wait helper.
WAIT_FOR_TIMEOUT=180

# -----------------------------------------------------------------------------
# Client configuration
# -----------------------------------------------------------------------------
# Hostname and port of the ISO 8583 server to contact.
ISO_SERVER_HOST=127.0.0.1
ISO_SERVER_PORT=5000
# Optional connection and response timeouts in milliseconds.
ISO_CONNECT_TIMEOUT_MS=30000
ISO_RESPONSE_TIMEOUT_MS=30000
# Timezone used when populating datetime fields in ISO messages.
ISO_CLIENT_TIMEZONE=UTC
# Sample ISO 8583 field defaults used by the demo client.
ISO_PAN=4242424242424242
ISO_PROCESSING_CODE=000000
ISO_AMOUNT=000000010000
ISO_POS_ENTRY_MODE=012
ISO_POS_CONDITION_CODE=00
ISO_ACQUIRER_ID=000000
ISO_TERMINAL_ID=TERMID01
ISO_MERCHANT_ID=MERCHANT0001
ISO_CURRENCY_CODE=840